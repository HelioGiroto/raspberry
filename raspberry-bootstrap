##########
# - Integrate with dotfiles
# - [Y/n] for Ruby, PostgreSQL, MySQL
##########

echo "Doing Debian Updates ..."
aptitude update       > /dev/null 2>&1
aptitude upgrade      > /dev/null 2>&1
aptitude dist-upgrade > /dev/null 2>&1
aptitude autoclean    > /dev/null 2>&1
aptitude full-upgrade > /dev/null 2>&1

echo "Installing Packages"
aptitude -y install laptop-detect libgl1-mesa-dri libparse-debianchangelog-perl uuid-runtime xfonts-base gnupg-curl oss-compat pulseaudio-esound-compat upower libreadline5 telnet libsqlite-dev sqlite sqlite-doc default-jre-headless xrdp > /dev/null 2>&1

echo "Installing Development Environment"
aptitude -y install vim git git-all tmux subversion

echo "Installing System/Security"
aptitude -y install libpcap bridge-utils tcpdump tor nmap python-nmap

echo "Installing R"
aptitude -y install r-base r-base-core r-base-dev r-recommended

echo "PostgreSQL? [Y/n]"
aptitude -y install postgresql-9.1 postgresql-client-9.1 postgresql-contrib-9.1 postgresql-doc-9.1 postgresql-server-dev-9.1

echo "MySQL? [Y/n]"
aptitude -y install percona-toolkit mysql-client-5.5 mysql-server-5.5 mysql-server-core-5.5 mysql-source-5.5

echo "Ruby? [Y/n]"
aptitude -y install ruby ruby-dev rubygems rdoc
gem install pg     > /dev/null 2>&1
gem install mysql2 > /dev/null 2>&1
gem install rake   > /dev/null 2>&1

echo "Setting up VIM ..."
curl -Lo- http://bit.ly/janus-bootstrap | bash
echo 'let NERDTreeShowHidden=1' >> ~/.vimrc

echo "Doing Debian Updates ..."
aptitude update       > /dev/null 2>&1
aptitude upgrade      > /dev/null 2>&1
aptitude dist-upgrade > /dev/null 2>&1
aptitude autoclean    > /dev/null 2>&1
aptitude full-upgrade > /dev/null 2>&1
