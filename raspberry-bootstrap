echo "Doing Debian Updates ..."
aptitude update       > /dev/null 2>&1
aptitude upgrade      > /dev/null 2>&1
aptitude dist-upgrade > /dev/null 2>&1
aptitude autoclean    > /dev/null 2>&1
aptitude full-upgrade > /dev/null 2>&1

echo "Installing Packages ..."
aptitude -y install apt-xapian-index aptitude-doc-cs aptitude-doc-en aptitude-doc-es aptitude-doc-fi aptitude-doc-fr aptitude-doc-it aptitude-doc-ja laptop-detect libgl1-mesa-dri libparse-debianchangelog-perl apt-xapian-index aptitude-doc-cs laptop-detect libgl1-mesa-dri libparse-debianchangelog-perl uuid-runtime xfonts-base gnupg-curl oss-compat pulseaudio-esound-compat upower libreadline5 telnet postgresql-9.1 postgresql-client-9.1 postgresql-contrib-9.1 postgresql-doc-9.1 postgresql-server-dev-9.1 percona-toolkit mysql-client-5.5 mysql-server-5.5 mysql-server-core-5.5 mysql-source-5.5 mysql-testsuite-5.5 vim git git-all tmux ruby ruby-dev rubygems rdoc libsqlite-dev sqlite sqlite-doc r-base r-base-core r-base-dev r-recommended > /dev/null 2>&1

echo "Setting up Ruby Gems ..."
gem install pg     > /dev/null 2>&1
gem install mysql2 > /dev/null 2>&1
gem install rake   > /dev/null 2>&1

echo "Setting up VIM ..."
curl -Lo- http://bit.ly/janus-bootstrap | bash
echo 'let NERDTreeShowHidden=1' >> ~/.vimrc

echo "Doing Debian Updates ..."
aptitude update       > /dev/null 2>&1
aptitude upgrade      > /dev/null 2>&1
aptitude dist-upgrade > /dev/null 2>&1
aptitude autoclean    > /dev/null 2>&1
aptitude full-upgrade > /dev/null 2>&1

